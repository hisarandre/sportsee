{
    "source" : {
        "include" : ["src"],
        "includePattern": ".jsx$",
        "excludePattern": "(nodes_modules/|docs/|public)"        
    },
    "plugins" : ["plugins/markdown"],
    "templates": {
        "cleverLinks" : true,
        "monospaceLinks" : true
    },
    "opts" : {
        "recurse" :true,
        "encoding": "utf8",
        "destination" : "./docs/"
    }
}